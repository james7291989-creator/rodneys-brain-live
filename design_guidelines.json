{
  "design_system": {
    "identity": {
      "name": "RodneysBrain",
      "tagline": "Generate beautiful web apps with AI",
      "persona": "The Anti-AI Designer (E1)",
      "archetype": "The Performance Pro (Elite Athleticism & Precision) + Retro-Futurism",
      "theme_mode": "dark",
      "emotional_tone": "Professional, Powerful, Limitless, Electric"
    },
    "typography": {
      "font_family": {
        "headings": "Manrope, sans-serif",
        "body": "Inter, sans-serif",
        "code": "JetBrains Mono, monospace"
      },
      "weights": {
        "headings": "700 (Bold) or 800 (ExtraBold)",
        "body": "400 (Regular) or 500 (Medium)",
        "code": "400 (Regular)"
      },
      "scale": {
        "h1": "text-5xl md:text-7xl tracking-tight leading-none",
        "h2": "text-3xl md:text-5xl tracking-tight",
        "h3": "text-2xl md:text-3xl tracking-normal",
        "body": "text-base md:text-lg leading-relaxed",
        "small": "text-sm tracking-wide uppercase"
      },
      "rules": [
        "Never use Inter for Headings.",
        "Use tight tracking for large headings.",
        "Use wide tracking (0.2em) for overlines/labels."
      ]
    },
    "colors": {
      "palette": {
        "background": {
          "default": "#09090b",
          "paper": "#18181b",
          "subtle": "#27272a"
        },
        "primary": {
          "main": "#3b82f6",
          "hover": "#2563eb",
          "foreground": "#ffffff"
        },
        "secondary": {
          "main": "#f4f4f5",
          "foreground": "#18181b"
        },
        "accent": {
          "main": "#f59e0b",
          "glow": "rgba(245, 158, 11, 0.5)"
        },
        "destructive": {
          "main": "#ef4444",
          "foreground": "#ffffff"
        },
        "border": {
          "default": "#27272a",
          "active": "#3f3f46"
        },
        "text": {
          "primary": "#fafafa",
          "secondary": "#a1a1aa",
          "muted": "#71717a"
        }
      },
      "gradients": {
        "hero_glow": "radial-gradient(circle at center, rgba(59, 130, 246, 0.15) 0%, rgba(9, 9, 11, 0) 70%)",
        "beam": "linear-gradient(to right, transparent, #3b82f6, transparent)"
      },
      "forbidden": [
        "#7351B7",
        "#1B93A4",
        "Teal or Purple for primary CTAs"
      ]
    },
    "layout": {
      "spacing_scale": [
        "p-1", "p-2", "p-4", "p-6", "p-8", "p-12", "p-16", "p-20", "p-24", "p-32"
      ],
      "container_padding": "px-6 md:px-12 lg:px-24",
      "grids": {
        "marketing": "grid-cols-1 md:grid-cols-8 lg:grid-cols-12 gap-8 md:gap-12",
        "dashboard": "grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6"
      },
      "border_radius": {
        "default": "rounded-lg",
        "card": "rounded-xl",
        "button": "rounded-md"
      }
    },
    "components": {
      "buttons": {
        "primary": "bg-primary text-primary-foreground hover:bg-primary/90 shadow-[0_0_20px_rgba(59,130,246,0.3)] transition-all duration-300",
        "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
        "ghost": "hover:bg-accent hover:text-accent-foreground",
        "outline": "border border-input bg-background hover:bg-accent hover:text-accent-foreground"
      },
      "cards": {
        "default": "bg-card text-card-foreground border border-border shadow-sm",
        "glass": "bg-black/40 backdrop-blur-xl border border-white/10 shadow-2xl",
        "neon": "bg-black border border-primary/50 shadow-[0_0_15px_rgba(59,130,246,0.15)]"
      },
      "inputs": {
        "default": "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
      }
    },
    "visual_enhancers": {
      "textures": "Use subtle noise overlays (opacity 0.03) on solid dark backgrounds to prevent banding and add tactility.",
      "shadows": {
        "glow": "0 0 40px -10px rgba(59, 130, 246, 0.3)",
        "deep": "0 25px 50px -12px rgba(0, 0, 0, 0.5)"
      },
      "borders": "Use 1px borders with 10-20% opacity white for separation in dark mode.",
      "animations": {
        "hover_lift": "hover:-translate-y-1 transition-transform duration-300",
        "fade_in": "animate-in fade-in duration-500",
        "slide_up": "animate-in slide-in-from-bottom-4 duration-500"
      }
    },
    "assets": {
      "icons": "lucide-react (default), @phosphor-icons/react (for marketing)",
      "images": {
        "hero_abstract": {
          "url": "https://images.unsplash.com/photo-1749006590475-4592a5dbf99f?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NTYxODd8MHwxfHNlYXJjaHwxfHxhYnN0cmFjdCUyMGN5YmVyJTIwZGlnaXRhbCUyMG5ldHdvcmt8ZW58MHx8fHwxNzY5MTUyMzYzfDA&ixlib=rb-4.1.0&q=85",
          "alt": "Abstract AI Core Visualization",
          "usage": "Hero section background or feature highlight"
        },
        "developer_focus": {
          "url": "https://images.unsplash.com/photo-1719400471588-575b23e27bd7?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDQ2Mzl8MHwxfHNlYXJjaHwxfHxkZXZlbG9wZXIlMjBjb2RpbmclMjBkYXJrJTIwd29ya3NwYWNlfGVufDB8fHx8MTc2OTE1MjM2NHww&ixlib=rb-4.1.0&q=85",
          "alt": "Developer working in dark environment",
          "usage": "About section or 'Built for Developers' feature block"
        },
        "code_screen": {
          "url": "https://images.unsplash.com/photo-1753998943228-73470750c597?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDQ2Mzl8MHwxfHNlYXJjaHwzfHxkZXZlbG9wZXIlMjBjb2RpbmclMjBkYXJrJTIwd29ya3NwYWNlfGVufDB8fHx8MTc2OTE1MjM2NHww&ixlib=rb-4.1.0&q=85",
          "alt": "Code on screen close up",
          "usage": "Background for code editor preview or technical features"
        }
      }
    },
    "instructions_to_main_agent": [
      "Implement the 'Performance Pro' dark theme immediately. Set body background to #09090b.",
      "Use 'Manrope' for all headings. Import it from Google Fonts.",
      "Use 'JetBrains Mono' for the Monaco Editor and all code snippets.",
      "Create a 'GlassPanel' component that uses the glassmorphism styles defined in 'cards.glass'.",
      "Ensure the 'Generate My App' CTA uses the primary electric blue color with a glow effect.",
      "The Dashboard must use the 'Bento Grid' layout (Mode B) for high density.",
      "Do not use gradients for the main background; use solid dark colors with subtle noise texture.",
      "Use 'sonner' for all toast notifications.",
      "Ensure all interactive elements have 'data-testid' attributes."
    ],
    "universal_guidelines": [
      "Avoid 'AI slop' - no generic centered layouts.",
      "No 'transition: all'. Animate specific properties.",
      "Use 2-3x more spacing than typical.",
      "Dark colors must be solid or very subtle gradients, never harsh gradients.",
      "Micro-animations on everything (hover, focus, active)."
    ]
  }
}